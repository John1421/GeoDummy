FROM node:22-alpine

WORKDIR /app

# Copiar ficheiros de dependÃªncias
COPY package.json package-lock.json ./

RUN npm ci

# Copiar o restante projeto
COPY . .

# Build Vite
RUN npm run build

# Instalar o http-server globalmente
RUN npm install -g http-server

# Create group and user before changing ownership
RUN addgroup -S appgroup && adduser -S user -G appgroup

# Change ownership of the /app folder
RUN chown -R user:appgroup /app



# Switch to the new user
USER user

# Expor porta
EXPOSE 80

# Servir a pasta dist
CMD ["http-server", "dist", "-p", "80"]
