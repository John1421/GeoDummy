# Etapa 1: Build (Node.js)
FROM node:20 AS build

WORKDIR /app

# Copiar ficheiros de configuração se existirem
COPY package*.json* ./

# Instalar dependências (ignora se o ficheiro não existir)
RUN if [ -f package.json ]; then npm install; fi

# Copiar resto do projeto
COPY . .

# Criar build (ou diretório vazio, se ainda não houver projeto)
RUN if [ -f package.json ]; then npm run build || mkdir -p build; else mkdir -p build; fi

# Etapa 2: Servir com Nginx
FROM nginx:stable-alpine
COPY --from=build /app/build /usr/share/nginx/html

# Expor a porta HTTP
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
